{{#if loginDiv}}
    <h1>Log in to access your profile page</h1>
{{else}}
    <script src='/javascripts/rooms.js'></script>
    <script>
        handlerooms({{user.id}})
    </script>

<div class="b">
    <button type="button" class="btn btn-default b" data-toggle="collapse" data-target="#create">Create Room</button>
    <div id="create" class="collapse">
        <br>
        <form id='createform' method="POST" action="javascript:void(0);" onSubmit="addGame({{user.id}}, '{{user.username}}')">
            <label>Name: </label><br>
            <input type="text" id="gname" name="name" required>
            <br>
            <label>Description: </label><br>
            <textarea rows="3" id="descr" cols="30" name="description" form="createform">...</textarea>
            <br>
            <label>Number of players:</label><br>
            <input type="number" id="nplayers" name="maxplayers" min="2" max="10" required>
            <br>
            <label>Value of initial bet:</label><br>
            <input type="number" id="initbet" name="bet" required>
            <br><br>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
        <br>
    </div>

    <div id="r" class="r">
        <br>
        <h2>Lista de todas as salas</h2>
        <br>
    </div>

</div>
{{/if}}